body
  font-family 'Philosopher', sans-serif
  padding 0
  margin 0
  background-color #e4e4e4
  &.schedule
    background-color #d6d7e4
  div.head
    display flex
    justify-content space-between
    align-items center
    flex-wrap nowrap
    background-color #26221D
    color white
    padding 0 15px
    div
      font-size 28px
      &.logo
        margin-bottom -6px
      &.main-title
        font-weight bold
      &.date
        float right
div.shedule-list
  width 100%
  padding 5px
  margin 0
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  flex-wrap wrap

  h3.separator
    align-self flex-start
    margin-left 25px
    padding-left 10px
    border-bottom 1px solid #26221D
    flex-basis fit-content
    min-width: 95.4%

  div.morning-list, div.noon-list, div.evening-list
    margin-bottom 10px
    display flex
    flex-wrap wrap
    //justify-content space-around


  article.program
    width 395px
    height 180px
    padding 2px
    margin 3px
    background-color #f1f1f5
    border-bottom 1px solid #26221D
    border-right 1px solid #26221D
    div
      display flex
      justify-content center
      padding 0 5px
    div.time
      color #558C8C
      flex-grow 1
      margin 0 45px
      font-size 35px
      font-weight bold
      border-bottom 1px solid #26221D
    section.info
      display flex
      div.image img
        flex-grow 1
        float right
        height 130px
        padding 5px 0
        min-width 173px
      div.description
        flex-grow 7
        max-width 200px
        float left
        display flex
        justify-content center
        flex-direction column
        font-size 20px
        div.title
          color #B80C09
          display block
          font-size 26px
          font-weight bold
        small.subtitle
          color #558C8C
          display block
          padding 0 0 0 25px
.container
  border-radius 2px
  padding  2px 15px
  background-color #f5f5f5
  box-sizing border-box
  .logo
    display flex
    justify-content space-between
    align-items center
    flex-wrap nowrap
    img
      height 20px
    .logo
      flex-grow 1
    .head-title
      flex-grow 7
      text-align center
      font-size 29px
      font-weight bold
      padding-left 30px

  .horizontal
    display inline-block
  #paramsFrom
    font-size 20px
    div
      margin 30px 17px 5px 17px
  .switch input
    display none
    &:checked + .slider
      background-color #ff8686
    &:focus + .slider
      box-shadow 0 0 1px #2196F3
    &:checked + .slider:before
      transform translateX(15px)
  .switch
    position relative
    &:before
      content "Укр"
      margin-right 30px
      cursor pointer
    &:after
      content "Рус"
      margin-left 30px
      cursor pointer
  .slider
    position absolute
    cursor pointer
    top 0px
    left 33px
    right 0
    bottom 0
    background-color #84c5ff
    border-radius 5%
    transition .4s
    height 17px
    width 42px
    &:before
      position absolute
      content ""
      height 10px
      width 18px
      left 4px
      bottom 4px
      background-color white
      border-radius 5%
      transition .4s
.out-of
  display flex
  justify-content flex-end
  align-items center
  padding 20px 10px
  label
    text-align right
    margin-right 50px
    border 1px solid #adadad
    padding-left 17px
    background-color whitesmoke
    border-radius 2px
    #date
      margin-left 20px
      border-radius 2px
      height 20px
      border none
      padding 5px 0 4px 48px
      text-align center
      font-family "Philosopher"
      font-size 16px
      &:focus
        outline none
  button
    border none
    border-radius 2px
    height 36px
    width 190px
    background-color #84c5ff
    color white
    font-weight bold
    font-family "Philosopher"
    font-size 17px
    text-transform uppercase
    letter-spacing 2px
    cursor pointer
    margin 0 30px
    &:focus
      outline none
    &:hover
      background-color #569bd8

#result
  width 1234px
  min-height 100px
  border-radius 2px
  margin 0px auto
  padding  2px 2px 0 2px
  text-align center
  background-color #f5f5f5
  box-sizing border-box
  transition 0.6s all
  opacity 1
  h2
    line-height 50px
  img
    margin 0 auto
    padding 1px 0 3px 0
.param-separator
  display inline-block


.hidden
  opacity 0 !important
@font-face {
  font-family: 'Philosopher';
  src: url('/fonts/Philosopher-Regular.ttf');
}
@font-face {
  font-family: 'Philosopher';
  font-weight: bold;
  src: url('/fonts/Philosopher-Bold.ttf');
}