doctype html
html(lang="ua")
    head
        - var mainTitle = lang == "ru" ? "Телевизионная программа" : "Телевізійна програма"
        - var mainTitleChannel = lang == "ru" ? "канала 1+1": "каналу 1+1"
        meta(charset="UTF-8")
        title #{mainTitle} #{mainTitleChannel}
        link(rel="stylesheet" type="text/css" href='/style.css')
    body.schedule
        div.head
            div.logo
                <svg version="1.1" width="50px" height="50px" viewBox="0 0 50 50"><rect fill="#C52125" width="50" height="50"></rect><polygon fill="#FFFFFF" points="40.501,27.215 40.501,18.356 31.646,18.356 31.646,22.786 36.075,22.786 36.075,27.216 31.646,27.216 31.646,31.646 44.934,31.646 44.934,27.216 40.501,27.216 "></polygon><polygon fill="#FFFFFF" points="27.213,22.785 27.213,18.355 22.786,18.355 22.786,22.785 18.357,22.785 18.357,27.215 22.786,27.215 22.786,31.645 27.213,31.645 27.213,27.215 31.646,27.215 31.646,22.785 "></polygon><polygon fill="#FFFFFF" points="13.927,18.355 5.067,18.355 5.067,22.785 9.499,22.785 9.499,27.215 5.067,27.215 5.067,31.645 18.357,31.645 18.357,27.215 13.926,27.215 13.926,18.355 "></polygon></svg>
            div.main-title #{mainTitle}
            div.date #{date}
        div.shedule-list
            h3.separator #{lang == "ru" ? "Утро" : "Ранок"}
            div.morning-list
                each program in morning
                    article.program
                        div.time #{program.time_begin}
                        section.info
                            div.description
                                div.title #{program.title}
                                small.subtitle #{program.subtitle}
                            div.image
                                img(src=program.image)
            h3.separator #{lang == "ru" ? "Обед" : "Обід"}
            div.noon-list
                each program in noon
                    article.program
                        div.time #{program.time_begin}
                        section.info
                            div.description
                                div.title #{program.title}
                                small.subtitle #{program.subtitle}
                            div.image
                                img(src=program.image)
            h3.separator #{lang == "ru" ? "Вечер" : "Вечір"}
            div.evening-list
                each program in evening
                    article.program
                        div.time #{program.time_begin}
                        section.info
                            div.description
                                div.title #{program.title}
                                small.subtitle #{program.subtitle}
                            div.image
                                img(src=program.image)


